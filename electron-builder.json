{
    "appId": "Askvox.app",
    "files": [
      "dist-electron",
      "dist-react",   
      "src/python/**"
    ],
    "icon": "./public/icon.jpg",
    "extraResources": [
      "dist-electron/preload.cjs", 
      {
        "from": "src/python/",
        "to": "python/",
        "filter": ["**/*"]
      },
      {
        "from": ".venv/",
        "to": "python_env/",
        "filter": ["**/*"]
      },
      {
        "from": ".env",
        "to": ".env" 
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target":"nsis"
    },
    "linux": { 
      "target": "AppImage",
      "category": "Utility"
    }
  }
  
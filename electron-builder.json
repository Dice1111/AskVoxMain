{
    "appId": "Askvox.app",
    "files": ["dist-electron", "dist-react","src/python/**"],
    "icon":"./public/icon.jpg",
    "extraResources":["dist-electron/preload.cjs",{
        "from": "src/python/",
        "to": "resources/python/",
        "filter": ["**/*"]
    },
    {
        "from": ".venv/",
        "to": "resources/python_env/",
        "filter": ["**/*"]
    },
    {
        "from": ".env",
        "to": "resources/"
    }],
    "mac":{
        "target": "dmg"
    },
    "win":{
        "target": ["portable","msi"]
    },
    "linux":{ 
        "target": "AppImage",
        "category": "Utility"
     }
}